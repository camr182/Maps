<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.ameza.mimapaxd.MainActivity">



    <ImageView
    android:id="@+id/ivLugar1"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:onClick="irMapaFevacel"
    android:src="@drawable/fevacel"
    android:layout_margin="14dp"/>

    <ImageView
        android:id="@+id/ivLugar2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:onClick="irMapaMetroUni"
        android:src="@drawable/metrouni"
        android:layout_margin="14dp"
        android:layout_toRightOf="@+id/ivLugar1"/>

    <ImageView
        android:id="@+id/ivLugar3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:onClick="irMapaUni"
        android:src="@drawable/uni"
        android:layout_margin="14dp"
        android:layout_below="@+id/ivLugar1"/>

    <ImageView
        android:id="@+id/ivLugar4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:onClick="irMapaPlazaNorte"
        android:src="@drawable/plazanorte"
        android:layout_margin="14dp"
        android:layout_toRightOf="@+id/ivLugar3"
        android:layout_below="@+id/ivLugar2"/>


</RelativeLayout>
